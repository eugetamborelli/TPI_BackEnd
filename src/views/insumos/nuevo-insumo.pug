doctype html
html
  head
    title Clínica Médica - Salud Integral
  body
    h1 Clínica Médica - Salud Integral
    h2 Gestión de Insumos
    br
    ul
      li
        a(href="/insumos/listado") Listado de Insumos
      li
        a(href="/insumos/nuevo-insumo") Alta de insumos
      li
        a(href="/insumos") Volver al Menú de Gestión de Insumos
    br

    h3 Alta de nuevo insumo

    if error
      p(style="color:red")= error

    form(action="/insumos/nuevo-insumo" method="POST")
      div
        label(for="nombre") Nombre:
        input(type="text" name="nombre" required value=formData?.nombre)
      div
        label(for="categoria") Categoría:
        input(type="text" name="categoria" required value=formData?.categoria)
      div
        label(for="proveedor") Proveedor:
        input(type="text" name="proveedor" value=formData?.proveedor)
      div
        label(for="stock") Stock:
        input(type="number" name="stock" min="0" required value=formData?.stock)
      div
        label(for="unidad") Unidad:
        input(type="text" name="unidad" value=formData?.unidad)
      div
        label(for="precio") Precio:
        input(type="number" step="0.01" name="precio" value=formData?.precio)
      div
        label(for="fechaAlta") Fecha de Alta:
        input(type="date" name="fechaAlta" value=formData?.fechaAlta)

      br
      button(type="submit") Guardar Insumo
